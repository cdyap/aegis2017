          <div class="col-xs-3">
            <%= f.label :minor, "Minor/Specialization" %>
          </div>
          <div class="col-xs-5">
            <%= f.text_area :minor %>
          </div>
        </div>
        <div class="field col-xs-offset-3 col-xs-8">
          <div class="col-xs-3">
            <%= f.label :cellphone_number, "Cellphone Number" %>
          </div>
          <div class="col-xs-5">
            <%= f.text_area :cellphone_number %>
          </div>
        </div>
        <div class="field col-xs-offset-3 col-xs-8">
          <div class="col-xs-3">
            <%= f.label :email, "Email" %>
          </div>
          <div class="col-xs-5">
            <%="#{current_account.email}" %>
          </div>
