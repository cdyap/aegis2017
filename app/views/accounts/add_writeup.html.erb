<div class="container with-fixed-navbar">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-md-offset-2">
      <% if @account.writeup.present? %>
        <h1 name="writeup-header">Edit Writeup</h1>
      <% else %>
        <h1 name="writeup-header">Submit Writeup</h1>
      <% end %>
      <h5>Writeups should not exceed more than 500 CWS (Characters with Spaces) excluding the header.</h5>
    </div>
  </div>
  <br>
  <div class="row">
    <%= simple_form_for current_account do |f| %>
        <% if current_account.errors.any? %>
          <% current_account.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        <% end %>
        <div class="field col-md-offset-3 col-md-6 col-xs-10 col-xs-offset-1">

          <label class="radio-inline">
            <input type="radio" name="inlineRadioOptions" id="originalwriteup" value="option3"> Original writeup
          </label>
          <label class="radio-inline">
            <input type="radio" name="inlineRadioOptions" id="emptywriteup" value="option1"> Empty writeup
          </label>
          <label class="radio-inline">
            <input type="radio" name="inlineRadioOptions" id="genericwriteup" value="option2"> Generic writeup
          </label>
          <div class="form-group">
            <%= f.text_area :writeup, rows: "5", :class => "writeup form-control", :maxlength => 500 %>
          </div>
          <p class="cws"></p>
        </div>
        <div class="actions col-md-offset-4 col-md-4 col-xs-10 col-xs-offset-1">
          <div class="center">
            <%= f.submit :class => "writeup-submit", :name => "writeup_submit", :value => "Save Draft", class: "center" %><br>
            <%= button_to "Cancel", :back, :name => "cancel", class: "center"%>
          </div>
        </div>
    <% end %>
  </div>
